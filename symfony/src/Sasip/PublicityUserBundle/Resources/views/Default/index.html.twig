    <script>

        $(window).load(function () {
            $().UItoTop({easingType: 'easeOutQuart'});
            $('#stuck_container').tmStickUp({});
        });

        // submit login form via js
        $('#loginMaster').on('submit', function (e) {
            e.preventDefault();
            $('#_submit').css('display', 'none');
            $('#busy').css('display', 'block');

            $.ajax({
                url: "{{ path("fos_user_security_check") }}",
                type: 'POST',
                data: $('#loginMaster').serialize(),
                success: function (data) {
                    if (data.message.localeCompare('Incorrect user name or password') === 0) {
                        $('#busy').css('display', 'none');
                        $('#_submit').css('display', 'block');
                        $('#errorMsg').text('*' + data.message);
                        $('#errorMsg').css('color', 'red');

                    } else {
                        $(location).attr('href', data.message);
                        $('#busy').css('display', 'none');

                    }
                }
            });
        });

    </script>

