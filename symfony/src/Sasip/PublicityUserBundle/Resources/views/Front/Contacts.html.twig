{% extends 'PublicityUserBundle:Default:index.html.twig' %}
{% block headerLogo %}
{% endblock %}
{% block css %}
    <style>
        header {
            color: #e6e5e5;
            display:block;
            position: relative;
            z-index: 999;
            margin-bottom: 0;
            height:auto;
            background: url('') no-repeat;
        }
        .page1 header {
            border-bottom: 1px solid #fff;
            padding-bottom: 0px;
        }
    </style>
    <style>#gmap_canvas img{max-width:none!important;background:none!important}</style>
{% endblock %}

{% block body %}
    <div class="container" role="main">


        <div class="page-title">

            <div class="">
                <h2>Contacts </h2>

            </div>
        </div>


        <div class="row">
            <div class="col-md-12">
                <div class="x_panel">
                    <div class="container-fluid" style="color:black;"> 
                        <div class="row">
                            <div class="col-md-6">
                                <h3><i class="fa fa-envelope-square"></i> Address </h3>
                                <div style="padding: 1em;font-size: 12pt;">
                                    282/7, High Level Rd.,<br /> 
                                    Nugegoda, Sri Lanka
                                </div>
                            </div>
                            <div class="col-md-6">
                                <h3><i class="fa fa-mobile"></i> Contact Numbers </h3>
                                <div style="padding: 1em;font-size: 12pt">
                                    Tel: 09411-2825193,<br /> 
                                    09411-2856688. <br />
                                    Fax: 09411-2825193<br /> 
                                    SMS Hotline: 071 7825193<br />
                                    Email: sasip.physics@gmail.com
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-8 hidden-small">
                                <h3><i class="fa fa-map-marker"></i> Location </h3>
                                <div style="overflow:hidden;height:500px;width:600px;" class="thumbnail">
                                    <div id="gmap_canvas" style="height:500px;width:600px;"></div>
                                    <a class="google-map-code" href="http://www.themecircle.net" id="get-map-data">themecircle</a>
                                </div>
                            </div>
                            <div  class="col-md-4">
                                <h3><i class="fa fa-unlink"></i> Feedbacks </h3>
                                <form action="{{path('send_feedback')}}" method="POST" class="form-horizontal">
                                    {{form_start(Data)}}
                                    <div class="form-group">
                                        {{form_widget(Data.firstname,{'attr':{'placeholder':'First Name','class':'form-control'}})}}
                                    </div>
                                    <div class="form-group">
                                        {{form_widget(Data.lastname,{'attr':{'placeholder':'Last Name','class':'form-control'}})}}                                       
                                    </div>

                                    <div class="form-group">
                                        {{form_widget(Data.title,{'attr':{'placeholder':'Title','class':'form-control'}})}}                                        
                                    </div>

                                    <div class="form-group">
                                        {{form_widget(Data.content,{'attr':{'placeholder':'Feedback','class':'form-control','rows':'8'}})}}                                        
                                    </div>

                                    <div class="form-group">
                                        <button type="submit" class="btn btn-info btn-sm pull-right">Send feedback</button>
                                    </div>
                                    {{form_end(Data)}}
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

    </div>
    <script type="text/javascript" src="http://maps.google.com/maps/api/js?sensor=false"></script><script type="text/javascript"> function init_map(){var myOptions = {zoom:17, center:new google.maps.LatLng(6.865228024891686, 79.89436197483826), mapTypeId: google.maps.MapTypeId.ROADMAP}; map = new google.maps.Map(document.getElementById("gmap_canvas"), myOptions); marker = new google.maps.Marker({map: map, position: new google.maps.LatLng(6.865228024891686, 79.89436197483826)}); infowindow = new google.maps.InfoWindow({content:"<strong><span style=" + "color: black;" + ">Sasip Institute</b><br/>282/7, High Level Rd,<br/> Nugegoda. Sri Lanka</span></strong>" }); google.maps.event.addListener(marker, "click", function(){infowindow.open(map, marker); }); infowindow.open(map, marker); }google.maps.event.addDomListener(window, 'load', init_map);</script>
    {% endblock %}

