<div class="x_panel">
    <div class="x_title">
        <h2>Student Attendance</h2>
        <div class="clearfix"></div>
    </div>
    <div class="x_content">
        {% if attendance == null %}
            <h4><strong>No Attendance Data Available</strong></h4>
        {% else %}
            <table class="table table-hover">
                <thead>
                    <tr>
                        <th>Date</th>
                        <th>Time</th>
                        <th>Class</th>
                        <th>Subject</th>
                        <th>Teacher</th>
                    </tr>
                </thead>
                <tbody>
                    {% for index,row in attendance %}
                        <tr>    
                            {% for rowVal in row %}
                                <td>{{rowVal}}</td>     
                            {% endfor %}
                        </tr>
                    {% endfor %}
                </tbody>
            </table>

        </div>
    </div>

    <div class="text-center">
        <strong>View More <i class="fa fa-caret-down"></i></strong>
    </div>
{% endif %}