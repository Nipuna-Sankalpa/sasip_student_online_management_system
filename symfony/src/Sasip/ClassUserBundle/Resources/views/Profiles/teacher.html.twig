{% extends "base.html.twig" %}
{% block title %}
    <title>Teacher Profile</title>
{% endblock %}

{% block navElements %}
    <li><a href="{{path('Profile_teacher')}}">  Profile</a>
    </li>
    <li id="nav-settings">
        <a href="javascript:;">            
            <span>Account Settings</span>
        </a>
    </li>
    <li>
        <a href="javascript:;">Help</a>
    </li>
{% endblock %}

{% block profileImageNavBarVerticle %}
    {% if teacher.image == null%}
        <img src="{{asset('images/BaseTemplate/contacts.png')}}" alt="Avatar" class="img-circle profile_img">
    {% else %}
        <img src="{{asset(teacher.image)}}" alt="Avatar" class="img-circle profile_img">
    {% endif %}
{% endblock %}

{% block sideBarMenu %}
    <div id="sidebar-menu" class="main_menu_side hidden-print main_menu">

        <div class="menu_section">
            <h3>General</h3>
            <ul class="nav side-menu">
                <li><a href="{{path('Profile_teacher')}}"><i class="fa fa-home"></i> Home <span class="fa fa-chevron-down"></span></a>                    
                </li>
                <li><a><i class="fa fa-edit"></i> News Forum <span class="fa fa-chevron-down"></span></a>
                    <ul class="nav child_menu" style="display: none">
                        <li id="newsForum"><a href="javascript:;">Messages</a>
                        </li>                                            
                    </ul>
                </li>
                <li><a><i class="fa fa-desktop"></i> Attendance <span class="fa fa-chevron-down"></span></a>
                    <ul class="nav child_menu" style="display: none">
                        <li id="examAttendance"><a href="javascript:;">Exam</a>
                        </li>
                        <li id="classAttendance"><a href="javascript:;">Class</a>
                        </li>
                    </ul>
                </li>
                <li><a><i class="fa fa-table"></i> Results <span class="fa fa-chevron-down"></span></a>
                    <ul class="nav child_menu" style="display: none">
                        <li id="examResulrBrutal"><a href="javascript:;">Student Marks</a>
                        </li>
                        <li id="examResultsAnalysis"><a href="javascript:;">View Result Analysis</a>
                        </li>
                    </ul>
                </li>                
            </ul>
        </div>
        <div class="menu_section">
            <h3>Accounts</h3>
            <ul class="nav side-menu">
                <li><a><i class="fa fa-bug"></i> Settings <span class="fa fa-chevron-down"></span></a>
                    <ul class="nav child_menu" style="display: none">
                        <li id="accountSetting"><a href="javascript:;">Account Settings</a>
                        </li>
                        <li id="accountPersonal"><a href="javascript:;">Personal Settings</a>
                        </li>
                    </ul>
                </li>                
            </ul>
        </div>

    </div>
{% endblock %}

{% block profileImageNavBarHorizontal %}
    {% if teacher.image == null%}
        <img src="{{asset('images/BaseTemplate/contacts.png')}}" alt="image">
    {% else %}
        <img src="{{asset(teacher.image)}}" alt="image">
    {% endif %}
{% endblock %}


{% block container %}
    <div class="container">
        <div class="page-title">
            <div class="title_left">
                <h3>Mentor Portal</h3>
            </div>


        </div>
        <div class="clearfix"></div>

        <div class="row">

            <div class="col-md-12 col-sm-12 col-xs-12">
                <div class="x_panel">
                    <div class="x_title">                        
                        <div id="contentBody" class="container">
                            <div class="x_title">
                                <div class="clearfix"></div>
                            </div>
                            <div class="x_content">

                                <div class="col-md-3 col-sm-3 col-xs-12 profile_left">

                                    <div class="profile_img">

                                        <!-- end of image cropping -->
                                        <div id="crop-avatar">
                                            <!-- Current avatar -->
                                            <div class="avatar-view">
                                                {% if teacher.image == null %}
                                                    <img src="{{asset('images/BaseTemplate/contacts.png')}}" alt="Avatar">
                                                {% else %}
                                                    <img src="{{asset(teacher.image)}}" alt="Avatar">
                                                {% endif %}
                                            </div>
                                            <!-- Loading state -->

                                        </div>
                                        <!-- end of image cropping -->

                                    </div>
                                    <h3>{{teacher.firstName}} {{teacher.lastName}}</h3>

                                    <div class="container">
                                        <h4>Bio</h4>
                                        {% if teacher.portfolio != null %}
                                            <p>{{teacher.portfolio}}</p>
                                        {% else %}
                                            <p>No bio has been specified</p>
                                        {% endif %}                                        
                                    </div>



                                </div>
                                <div class="col-md-9 col-sm-9 col-xs-12">
                                    <div class="" role="tabpanel" data-example-id="togglable-tabs">
                                        <ul id="myTab" class="nav nav-tabs bar_tabs" role="tablist">
                                            <li role="presentation" class="active"><a href="#tab_content1" id="home-tab" role="tab" data-toggle="tab" aria-expanded="true">Personal Profile</a>
                                            </li>
                                            <li role="presentation" class=""><a href="#tab_content2" role="tab" id="profile-tab" data-toggle="tab" aria-expanded="false">Classes </a>
                                            </li>

                                        </ul>
                                        <div id="myTabContent" class="tab-content">
                                            <div role="tabpanel" class="tab-pane fade active in" id="tab_content1" aria-labelledby="profile-tab">
                                                <div class="row" style="font-size: 11pt;">
                                                    <div class="col-md-3 text-right"><strong>Name :</strong></div>
                                                    {% if teacher.firstName != null %}
                                                        <div class="col-md-9 text-left">{{teacher.salutation}} {{teacher.firstName}} {{teacher.lastName}}</div>
                                                        {% if teacher.title != null %}
                                                            <div>{{teacher.title}}</div>
                                                        {% endif %}
                                                    {% endif %}
                                                </div>
                                                <div class="row" style="font-size: 11pt;">
                                                    <div class="col-md-3 text-right"><strong>Address :</strong></div>
                                                    {% if teacher.address != null %}
                                                        <div class="col-md-9 text-left">{{teacher.address}}</div>                            
                                                    {% endif %}
                                                </div>                                            
                                                {% if mobile != null %}
                                                    <div class="row" style="font-size: 11pt;">
                                                        <div class="col-md-3 text-right"><strong>Mobile Number :</strong></div>
                                                        {% for mob in mobile %}
                                                            <div class="col-md-9 text-left">{{mob.contactnumber}}</div>                            
                                                        {% endfor %}
                                                    </div>
                                                {% endif %}
                                                <div class="row" style="font-size: 11pt;">
                                                    <div class="col-md-3 text-right"><strong>Gender :</strong></div>
                                                    {% if teacher.gender != null %}
                                                        <div class="col-md-9 text-left">{{teacher.gender}}</div>                            
                                                    {% endif %}
                                                </div>
                                                {% if teacher.dateofbirth != null %}
                                                    <div class="row" style="font-size: 11pt;">
                                                        <div class="col-md-3 text-right"><strong>Date Of Birth :</strong></div>
                                                        <div class="col-md-9 text-left">{{teacher.dateofbirth|date('M-d-Y')}}</div>                            
                                                    </div>
                                                {% endif %}
                                                {% if teacher.school != null %}
                                                    <div class="row" style="font-size: 11pt;">
                                                        <div class="col-md-3 text-right"><strong>School :</strong></div>
                                                        <div class="col-md-9 text-left">{{teacher.school}}</div>                            
                                                    </div>
                                                {% endif %}
                                                {% if teacher.university != null %}
                                                    <div class="row" style="font-size: 11pt;">
                                                        <div class="col-md-3 text-right"><strong>University :</strong></div>
                                                        <div class="col-md-9 text-left">{{teacher.university}}</div>                           
                                                    </div>
                                                {% endif %}

                                                <div class="row" style="font-size: 11pt;">
                                                    {% if teacher.facebook != null %}
                                                        <div class="col-lg-4">
                                                            <a href="{{teacher.facebook}}"><i class="fa fa-facebook-square"></i> Facebook </a>
                                                        </div>
                                                    {% endif %}
                                                    {% if teacher.twitter != null %}
                                                        <div class="col-lg-4">
                                                            <a href="{{teacher.twitter}}"><i class="fa fa-twitter-square"></i> Twitter </a>
                                                        </div>
                                                    {% endif %}
                                                    {% if teacher.linkedIn != null %}
                                                        <div class="col-lg-4">
                                                            <a href="{{teacher.linkedIn}}"><i class="fa fa-linkedin-square"></i> Linked In </a>
                                                        </div>
                                                    {% endif %}
                                                </div>
                                            </div>
                                            <div role="tabpanel" class="tab-pane fade" id="tab_content2" aria-labelledby="profile-tab">
                                                {% if class != null %}
                                                    <div class="row" style="font-size: 11pt;">
                                                        <div class="col-md-3 text-right"><strong>Classes :</strong></div>
                                                        <div class="col-md-9">
                                                            {% for clz in class %}
                                                                <div class="col-md-9 text-left"><i class="fa fa-location-arrow"></i> {{clz.id}}</div>                                                            
                                                                <div class="col-md-9 text-left">{{clz.subject}}</div>
                                                                <br />
                                                            {% endfor %}
                                                        </div>
                                                    {% endif %}
                                                </div>

                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div id="screenSaver" class="text-center" style="margin-top: 10%;margin-bottom: 10%;display: none;"><i class="fa fa-5x fa-spin fa-cog"></i></div>
                            <div class="clearfix"></div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <script>
//this function helps to load contents manually when event occurs
            function loadContentManually(container, route) {
                $(container).empty();
                $('#screenSaver').css('display', 'block');
                $.ajax({
                    url: route,
                    type: 'GET',
                    dataType: 'html',
                    success: function (data) {
                        $('#screenSaver').css('display', 'none');                        
                        $(container).append(data);
                    }
                });
            }

            $('#accountSetting,#nav-settings').on('click', function () {
                loadContentManually("#contentBody", "{{path('studentAccountSettings')}}");
            });

            $('#newsForum').on('click', function () {
                loadContentManually("#contentBody", "{{path('displayForum')}}");
            });

            $('#classAttendance').on('click', function () {
                loadContentManually("#contentBody", "{{path('teacherClassAttendanceRender')}}");
            });

            $('#examAttendance').on('click', function () {
                loadContentManually("#contentBody", "{{path('teacherExamAttendanceRender')}}");
            });

            $('#examResultsAnalysis').on('click', function () {
                loadContentManually("#contentBody", "{{path('teacherResultAnalysisRender')}}");
            });

            $('#examResulrBrutal').on('click', function () {
                loadContentManually("#contentBody", "{{path('teacherBruteExamResultRender')}}");
            });

            $('#accountPersonal').on('click', function () {
                loadContentManually("#contentBody", "{{path('teacherPersonalAccountSetting')}}");
            });
        </script>
    {% endblock %}

{% block footer %}{% endblock %}