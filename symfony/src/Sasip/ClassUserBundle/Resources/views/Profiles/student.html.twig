        <img src="{{asset('images/BaseTemplate/contacts.png')}}" alt="Avatar" class="img-circle profile_img">
    {% else %}
        <img src="{{asset(student[0]['image'])}}" alt="Avatar" class="img-circle profile_img">
    {% endif %}
{% endblock %}

{% block navElements %}
    <li><a href="{{path('Profile_student',{'student_id':app.user.userName})}}">  Profile</a>
    </li>
    <li id="nav-settings">
        <a href="javascript:;">            
            <span>Account Settings</span>
