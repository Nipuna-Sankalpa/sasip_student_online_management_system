{% block profileImageNavBarHorizontal %}
    {% if student[0]['image']== null%}
        <img src="{{asset('images/BaseTemplate/contacts.png')}}" alt="image">
    {% else %}
        <img src="{{asset(student[0]['image'])}}" alt="image">
    {% endif %}
{% endblock %}


{% block container %}
    <div class="container">
        <div class="page-title">
            <div class="title_left">
                <h3>Student Portal</h3>
            </div>

        </div>
        <div class="clearfix"></div>

        <div class="row">
            <div class="col-md-12 col-sm-12 col-xs-12">
                <div class="x_panel">
                    <div class="x_title">                       
                        <h3>Student Profile</h3>
                        <div id="contentBody" class="container">
                            <div class="x_title">                                

                                <div class="clearfix"></div>
                            </div>
                            <div class="x_content">

                                <div class="col-md-3 col-sm-3 col-xs-12 profile_left">

                                    <div class="profile_img">

                                        <!-- end of image cropping -->
                                        <div id="crop-avatar">
                                            <!-- Current avatar -->
                                            <div class="avatar-view" title="Profile Image">
                                                {% if student[0]['image']== null%}
                                                    <img src="{{asset('images/BaseTemplate/contacts.png')}}" alt="Avatar">
                                                {% else %}
                                                    <img src="{{asset(student[0]['image'])}}" alt="Avatar">
                                                {% endif %}
                                            </div>
                                            <!-- Loading state -->

                                        </div>
                                        <!-- end of image cropping -->

                                    </div>
                                    <h3>{{student[0]['first_name']}} {{student[0]['last_name']}}</h3>

                                    <div class="text">
                                        <h4>Portfolio</h4>
                                        {% if student[0]['portfolio'] == null %}
                                            <p class="text-justify" > Describe your self</p>
                                        {% else %}
                                            <p class="text-justify">{{student[0]['portfolio']}}</p>
                                        {% endif %}
                                    </div>



                                </div>
                                <div class="col-md-9 col-sm-9 col-xs-12">
                                    <div class="" role="tabpanel" data-example-id="togglable-tabs">
                                        <ul id="myTab" class="nav nav-tabs bar_tabs" role="tablist" >
                                            <li role="presentation" class="active"><a href="#tab_content1" id="home-tab" role="tab" data-toggle="tab" aria-expanded="true">Personal Profile</a>
                                            </li>
                                            <li role="presentation" class=""><a href="#tab_content2" role="tab" id="profile-tab" data-toggle="tab" aria-expanded="false">Educational Profile</a>
                                            </li>
                                            <li role="presentation" class=""><a href="#tab_content3" role="tab" id="profile-tab2" data-toggle="tab" aria-expanded="false">Remarks</a>
                                            </li>
                                        </ul>
                                        <div id="myTabContent" class="tab-content">
                                            <div role="tabpanel" class="tab-pane fade active in" id="tab_content1" aria-labelledby="home-tab">
                                                <div style="font-size: 12pt;"><strong>Student Details :</strong></div>
                                                <br />
                                                <div class="row" style="font-size: 11pt;">
                                                    <div class="col-md-3 text-right"><strong>Index :</strong></div>
                                                    <div class="col-md-9 text-left">{{student[0]['username']}}</div>
                                                </div>                                                
                                                <div class="row" style="font-size: 11pt;">
                                                    <div class="col-md-3 text-right"><strong>School :</strong></div>
                                                    {% if student[0]['school'] == null%}
                                                        <div class="col-md-9 text-left">No school has been specified</div>
                                                    {% else %}
                                                        <div class="col-md-9 text-left">{{student[0]['school']}}</div>
                                                    {% endif %}
                                                </div>                                                
                                                <div class="row" style="font-size: 11pt;">
                                                    <div class="col-md-3 text-right"><strong>E-mail :</strong></div>
                                                    {% if student[0]['email'] == null%}
                                                        <div class="col-md-9 text-left">No email has been specified</div>
                                                    {% else %}
                                                        <div class="col-md-9 text-left">{{student[0]['email']}}</div>
                                                    {% endif %}
                                                </div>                                                
                                                <div class="row" style="font-size: 11pt;">
                                                    <div class="col-md-3 text-right"><strong>Mobile :</strong></div>
                                                    {% if mobile == null%}
                                                        <div class="col-md-9 text-left">No mobile  numbers have been specified</div>
                                                    {% else %}
                                                        {% for key,mob in mobile %}
                                                            <div class="col-md-9 text-left">{{mob['contact_number']}}</div>
                                                        {% endfor %}
                                                    {% endif %}
                                                </div>
                                                <div style="font-size: 12pt;"><strong>Parent Details :</strong></div>
                                                <br />
                                                <div class="row" style="font-size: 11pt;">
                                                    <div class="col-md-3 text-right"><strong>Parent Name :</strong></div>
                                                    <div class="col-md-9 text-left">{{student[0]['parent_name']}}</div>
                                                </div>                                                
                                                <div class="row" style="font-size: 11pt;">
                                                    <div class="col-md-3 text-right"><strong>Parent Mobile :</strong></div>
                                                    <div class="col-md-9 text-left">{{student[0]['parent_mobile']}}</div>
                                                </div>                                                
                                            </div>
                                            <div role="tabpanel" class="tab-pane fade" id="tab_content2" aria-labelledby="profile-tab">                                                

                                                <div class="row" style="font-size: 11pt;">
                                                    <div class="col-md-3 text-right"><strong>Year of exam :</strong></div>
                                                    <div class="col-md-9 text-left">{{student[0]['year_of_exam']}}</div>
                                                </div>                                                
                                                <div class="row" style="font-size: 11pt;">
                                                    <div class="col-md-3 text-right"><strong>Registered Classes :</strong></div>
                                                    <div class="col-md-9 text-left">
                                                        {% for key,class in classes %}
                                                            <div class="row">
                                                                <div class="col-md-3">                                                                
                                                                    <div>{{class['class_id']}} </div>                                                                
                                                                </div>
                                                                <div class="col-md-9 text-left">                                                                
                                                                    <div><i class="fa fa-arrow-circle-right"></i> {{class['first_name']}} {{class['last_name']}}</div>
                                                                    <div><i class="fa fa-arrow-circle-right"></i> {{class['subject']}}</div>
                                                                    <div><i class="fa fa-arrow-circle-right"></i> {{class['conduct_day']}}</div>
                                                                    <div><i class="fa fa-arrow-circle-right"></i> {{class['time']}}</div>
                                                                </div>                                                            
                                                            </div>
                                                            <div class="divider"></div>
                                                        {% endfor %}
                                                    </div>
                                                </div>

                                            </div>
                                            <div role="tabpanel" class="tab-pane fade" id="tab_content3" aria-labelledby="profile-tab">

                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>

                            <div class="clearfix"></div>
                        </div>
                        <div id="screenSaver" class="text-center" style="margin-top: 10%;margin-bottom: 10%;display: none;"><i class="fa fa-5x fa-spin fa-cog"></i></div>
                    </div>

                </div>
            </div>
        </div>
    </div>
{% endblock %}

{% block js %}
    <script>

        //this function helps to load contents manually when event occurs
        function loadContentManually(container, route) {
            $(container).empty();
            $('#screenSaver').css('display', 'block');
            $.ajax({
                url: route,
                type: 'GET',
                dataType: 'html',
                success: function (data) {
                    $('#screenSaver').css('display', 'none');

                    $(container).append(data);
                }
            });
        }

        $('#detailsClass').on('click', function () {
            loadContentManually("#contentBody", "{{path('studentAttendanceClass')}}");
        });

        $('#detailsExam').on('click', function () {
            loadContentManually("#contentBody", "{{path('studentAttendanceExam')}}");
        });


        $('#allResults').on('click', function () {
            loadContentManually("#contentBody", "{{path('studentViewAllResults',{'examId':'201201'})}}");
        });

        $('#resultAnalysis').on('click', function () {
            loadContentManually("#contentBody", "{{path('studentAnalysisTemplateResults')}}");
        });

        $('#newsForum').on('click', function () {
            loadContentManually("#contentBody", "{{path('displayForum')}}");
        });

        $('#profileSetting').on('click', function () {
            loadContentManually("#contentBody", "{{path('studentProfileSettings')}}");
        });

        $('#accountSetting,#nav-settings').on('click', function () {
            loadContentManually("#contentBody", "{{path('studentAccountSettings')}}");
        });
    </script>
{% endblock %}

{% block footer %}{% endblock %}