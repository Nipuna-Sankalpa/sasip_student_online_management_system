        <div class="menu_section">

            <h3>General</h3>
            <ul class="nav side-menu">
                <li><a><i class="fa fa-home"></i> Home <span class="fa fa-chevron-down"></span></a>                    
                </li>

                <li><a><i class="fa fa-edit"></i> Exam <span class="fa fa-chevron-down"></span></a>
                    <ul class="nav child_menu" style="display: none">                                                                
                        <li id="allResults"><a href="#">View all results</a>
                        </li>                                            
                        <li id="resultAnalysis"><a href="#">Result analysis</a>
                        </li>                                            
                    </ul>
                </li>

                <li id="newsForum"><a href="#"><i class="fa fa-desktop"></i> News forum <span class="fa fa-chevron-down"></span></a>                    
                </li>

                <li><a><i class="fa fa-table"></i> Attendance <span class="fa fa-chevron-down"></span></a>
                    <ul class="nav child_menu" style="display: none">
                        <li id="details"><a href="#">Exams</a>
                        </li>
                        <li><a href="#">Class</a>
