                    </ul>
                </li>                
            </ul>
        </div>
        <div class="menu_section">
            <h3>Accounts</h3>
            <ul class="nav side-menu">
                <li><a><i class="fa fa-bug"></i> Account Settings <span class="fa fa-chevron-down"></span></a>
                    <ul class="nav child_menu" style="display: none">
                        <li><a href="#">Personal Settings</a>
                        </li>
                        <li><a href="#">Account Settings</a>
                        </li>
                    </ul>
                </li>              
            </ul>
        </div>

    </div>

{% endblock %}


{% block container %}
    <div class="container">
        <div class="page-title">
            <div class="title_left">
                <h3>Student Portal</h3>
            </div>

            <div class="title_right">
                <div class="col-md-5 col-sm-5 col-xs-12 form-group pull-right top_search">
                    <div class="input-group">
                        <input type="text" class="form-control" placeholder="Search for...">
                        <span class="input-group-btn">
                            <button class="btn btn-default" type="button">Go!</button>
                        </span>
                    </div>
                </div>
            </div>
        </div>
        <div class="clearfix"></div>

        <div class="row">
            <div class="col-md-12 col-sm-12 col-xs-12">
                <div class="x_panel">
                    <div class="x_title">
                        <h2 id="headSub" class="page-title">Student Profile</h2>
                        
                        <div id="contentBody" class="container">
                            
                        </div>
                        
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}

{% block js %}
    <script>        
        $('#details').on('click', function () {
            
            var $whereToLoadContent = $("#contentBody"); //where you want to load data
            
            var routeWithPlaceHolder = "{{path('studentAttendacne')}}";            
            $whereToLoadContent.load(routeWithPlaceHolder);
            
        });
        //load latest exam result
        $('#allResults').on('click', function () {
            
            var $whereToLoadContent = $("#contentBody"); //where you want to load data
            
            var routeWithPlaceHolder = "{{path('studentViewAllResults',{'examId':'201101'})}}";            
            $whereToLoadContent.load(routeWithPlaceHolder);
            
        });
        $('#resultAnalysis').on('click', function () {
            
            var $whereToLoadContent = $("#contentBody"); //where you want to load data
            
            var routeWithPlaceHolder = "{{path('studentAnalysisTemplateResults')}}";            
            $whereToLoadContent.load(routeWithPlaceHolder);
            
        });
        $('#newsForum').on('click', function () {
            
            var $whereToLoadContent = $("#contentBody"); //where you want to load data
            
            var routeWithPlaceHolder = "{{path('displayForum')}}";            
            $whereToLoadContent.load(routeWithPlaceHolder);
            
        });
    </script>
{% endblock %}

{% block footer %}{% endblock %}