<link rel="stylesheet" href="{{asset('css/bootstrap.min.css')}}">

<h3 class="text-center">Register</h3>

<div class="container">
    <div class="col-lg-4 col-lg-offset-4" style="background-color: rgba(0,0,0,0.1);padding: 1em;border-radius: 1em;">
        <form class="form-group" action="{{ path('fos_user_registration_register') }}" {{ form_enctype(form) }} method="POST" >
            {{form_start(form)}}
            <div class="form-group">
                <label for="ID" class="control-label">Index Number</label>
                <div >
                    {{form_widget(form.id,{'attr':{'class':'form-control','id':'ID','placeholder':'Enter Your ID Number'}})}}

                </div>
            </div>
            <div class="form-group">
                <label for="userName" class="control-label">User Name</label>
                <div >
                    {{form_widget(form.username,{'attr':{'class':'form-control','placeholder':'Enter User Name','id':'userName'}})}}

                </div>
            </div>

            <div class="form-group">
                <label for="email" class="control-label">Email</label>
                <div >
                    {{form_widget(form.email,{'attr':{'class':'form-control','placeholder':'Enter Email','id':'email'}})}}

                </div>
            </div>

            <div class="form-group">
                <label for="f_pass" class="control-label">Enter Password</label>
                <div >
                    {{form_widget(form.plainPassword.first,{'attr':{'class':'form-control','placeholder':'Enter Password','id':'f_pass'}})}}

                </div>
            </div>

            <div class="form-group">
                <label for="s_pass" class="control-label">Re-type Password</label>
                <div >
                    {{form_widget(form.plainPassword.second,{'attr':{'class':'form-control','placeholder':'Re-type Password','id':'s_pass'}})}}

                </div>
            </div>

            <div class="form-group">
                <div class="col-sm-offset-2 col-sm-10">
                    <button type="submit" class="btn btn-info pull-right">Register</button>
                </div>
            </div>
            {{form_end(form)}}
        </form>
    </div>
</div>